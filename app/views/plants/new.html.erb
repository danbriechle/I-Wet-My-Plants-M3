<%= form_for [@plant] do %>
<% if @errors %>
  <div class="flash">
    <% @errors.messages.each do |message| %>
      <li><%= "#{message[0].to_s} " "#{message[1].pop}" %></li>
    <% end %>
  </div>
<% end %>
  <ul>
    <li><%= label_tag :name %></li>
    <li><%= text_field_tag :name %></li>
    <li><%= label_tag :species %></li>
    <li><%= text_field_tag :species %></li>
    <li><%= label_tag :frequency %></li>
    <li><%= number_field_tag :frequency %></li>
    <li><%= submit_tag "Create Plant", id:"Create Plant" %></li>
  </ul>
<% end %>
