<%= render "layouts/nav" %>
<div class="form_container">
  <div class="form-group">
    <h3>Edit your plant below:</h3>
  </div>
  <%= form_for [@garden, @plant], url: plant_path do |f| %>
    <div class="form-group">
      <h5><%= f.label :name, "Plant Name:" %></h5>
      <%= f.text_field :name, class: 'form-control' %>
    </div>
    <div class="form-group">
      <h5><%= f.label :species, "Plant Species:" %></h5>
      <%= f.text_field :species, class: 'form-control' %>
    </div>
    <div class="form-group">
      <h5><%= f.label :frequency, "Frequency Plant Needs Watered:" %></h5>
      <%= f.number_field :frequency, class: 'form-control' %>
    </div>
    <div class="form-group">
      <%= f.submit class: "btn btn-outline-primary btn-lg" %>
    </div>
  <% end %>
</div>
